extends layout

block content 
	h2.page-header Login
	p Please login using the form below
	form(method='post', action='/users/login')
		.form-group
			label(for='username') Username
			input.form-control(type='text', name='username' placeholder='Enter your username')
		.form-group
			label(for='password') Password
			input.form-control(type='password', name='password' placeholder='Enter your password')
		input.btn.btn-primary(type='submit', name='submit', value='Login')		
